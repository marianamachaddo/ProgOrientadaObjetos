package controller;

import controller.aluno.CtrlManterAlunos;
import controller.curso.CtrlManterCursos;
import controller.turma.CtrlManterTurmas;
import viewer.JanelaPrincipal;

public class CtrlPrograma extends CtrlAbstrato {
    private JanelaPrincipal janelaPrincipal;
    private CtrlManterCursos ctrlManterCursos;
    private CtrlManterAlunos ctrlManterAlunos;
    private CtrlManterTurmas ctrlManterTurmas;

    public CtrlPrograma() {
        super(null);
        this.janelaPrincipal = new JanelaPrincipal(this);
        this.janelaPrincipal.apresentar();
    }

    public void iniciarManterCursos() {
        if (this.ctrlManterCursos == null)
            this.ctrlManterCursos = new CtrlManterCursos(this);
        else
            this.janelaPrincipal.notificar("Este Caso de Uso já está em execução!");
    }

    public void manterCursosFinalizado() {
        this.ctrlManterCursos = null;
    }

    public void iniciarManterAlunos() {
        if (this.ctrlManterAlunos == null)
            this.ctrlManterAlunos = new CtrlManterAlunos(this);
        else
            this.janelaPrincipal.notificar("Este Caso de Uso já está em execução!");
    }

    public void manterAlunosFinalizado() {
        this.ctrlManterAlunos = null;
    }

    public void iniciarManterTurmas() {
        if (this.ctrlManterTurmas == null)
            this.ctrlManterTurmas = new CtrlManterTurmas(this);
        else
            this.janelaPrincipal.notificar("Este Caso de Uso já está em execução!");
    }

    public void manterTurmasFinalizado() {
        this.ctrlManterTurmas = null;
    }

    @Override
    public void encerrar() {
        System.exit(0);
    }

    @Override
    public Object getBemTangivel() {
        return null;
    }

    public static void main(String[] args) throws Exception {
        new CtrlPrograma();
    }
}
