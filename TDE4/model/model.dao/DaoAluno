package model.dao;

import java.util.ArrayList;
import model.Aluno;

public class DaoAluno {

    private static ArrayList<Aluno> listaAlunos;

    static {
        DaoAluno.listaAlunos = new ArrayList<Aluno>();
    }

    public boolean adicionar(Aluno novo) {
        return DaoAluno.listaAlunos.add(novo);
    }

    public boolean alterar(Aluno aluno) {
        if (DaoAluno.listaAlunos.contains(aluno)) {
            return true;
        }
        return false;
    }

    public boolean excluir(Aluno aluno) {
        return DaoAluno.listaAlunos.remove(aluno);
    }

    public ArrayList<Aluno> obterTodos() {
        return new ArrayList<Aluno>(DaoAluno.listaAlunos);
    }
}
